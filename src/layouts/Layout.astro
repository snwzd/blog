---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="snwzd website" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="flex justify-center bg-teal-900 text-white">
    <div class="flex h-screen w-full lg:w-2/5 flex-col">
      <header
        class="flex-none border-b-2 border-dashed border-teal-800 py-2 px-4 bg-teal-900"
      >
        <div class="flex items-center justify-between">
          <a href="/" class="font-semibold">SNWZD</a>
          <div class="inline-flex">
            <a
              href="/blogs"
              class="py-2 px-4 border-t-2 border-b-2 border-l-2 border-teal-800 hover:bg-teal-800 rounded-l-lg"
              >Blogs</a
            >
            <a
              href="/shelf"
              class="py-2 px-4 border-2 border-teal-800 hover:bg-teal-800 rounded-r-lg"
              >Shelf</a
            >
          </div>
        </div>
      </header>

      <main class="flex-grow px-4 pb-8 pt-6">
        <slot />
      </main>

      <footer
        class="flex-none border-t-2 border-dashed border-teal-800 py-4 px-4"
      >
        <div class="flex items-center justify-evenly">
          <a href="https://github.com/snwzd" class="py-2 hover:text-teal-200"
            >GitHub</a
          >
          <a
            href="https://www.linkedin.com/in/mprasadme"
            class="py-2 hover:text-teal-200">LinkedIn</a
          >
          <a
            href="https://twitter.com/sloflayer"
            class="py-2 hover:text-teal-200">X (Twitter)</a
          >
          <a
            href="https://bsky.app/profile/snwzd.bsky.social"
            class="py-2 hover:text-teal-200">Bluesky</a
          >
        </div>
      </footer>
    </div>
  </body>
</html>
