---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="snwzd website" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="flex justify-center bg-cyan-900 text-white scrollbar-thin scrollbar-thumb-rounded-full scrollbar-track-rounded-full scrollbar-thumb-cyan-600 scrollbar-track-cyan-300">
    <div class="flex h-screen w-full lg:w-2/5 flex-col">
      <header
        class="flex-none border-b-2 border-dashed border-cyan-800 py-2 px-4 bg-cyan-900"
      >
        <div class="flex items-center justify-between">
          <a href="/" class="font-bold">SNWZD</a>
          <div class="inline-flex">
            <a
              href="/blogs"
              class="py-2 px-4 border-t-2 border-b-2 border-l-2 border-cyan-800 hover:bg-cyan-800 rounded-l-lg"
              >Blogs</a
            >
            <a
              href="/shelf"
              class="py-2 px-4 border-2 border-cyan-800 hover:bg-cyan-800 rounded-r-lg"
              >Shelf</a
            >
          </div>
        </div>
      </header>

      <main class="flex-grow px-4 pb-8 pt-6">
        <slot />
      </main>

      <footer
        class="flex-none border-t-2 border-dashed border-cyan-800 py-4 px-4"
      >
        <div class="flex items-center justify-end">
          <a
            href="https://github.com/snwzd"
            class="py-2 pl-4 hover:text-cyan-200">GitHub</a
          >
          <a
            href="https://www.linkedin.com/in/mprasadme"
            class="py-2 pl-4 hover:text-cyan-200">LinkedIn</a
          >
          <a
            href="https://twitter.com/sloflayer"
            class="py-2 pl-4 hover:text-cyan-200">X (Twitter)</a
          >
          <a
            href="https://bsky.app/profile/snwzd.bsky.social"
            class="py-2 pl-4 hover:text-cyan-200">Bluesky</a
          >
        </div>
      </footer>
    </div>
  </body>
</html>
